generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String                @id
  name                String
  email               String
  emailVerified       Boolean               @default(false)
  image               String?
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @default(now()) @updatedAt
  sessions            Session[]
  accounts            Account[]
  userLinks           UserLinks?
  Article             Article[]
  articleComments     ArticleComment[]
  articleCommentReply ArticleCommentReply[]
  polls               Poll[]
  pollVotes           PollVote[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model UserLinks {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Profile information
  name            String
  handle          String
  bio             String    @default("")
  avatarUrl       String?
  handleUpdatedAt DateTime? // Track when handle was last changed (null on creation)

  // JSON fields for flexible data storage
  socials Json @default("[]") // Array of SavedSocial objects
  blocks  Json @default("[]") // Array of AnyBlock objects

  // Metadata
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_links")
}

model Article {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Article content
  title      String  @default("")
  slug       String  @unique
  content    String  @default("") @db.Text
  excerpt    String? @db.Text
  coverImage String?

  // Metadata
  tags       Json   @default("[]") // Array of strings
  visibility String @default("private") // "public", "private", "supporters", "members"

  // Publishing options
  published       Boolean   @default(false)
  notifyFollowers Boolean   @default(false)
  scheduledFor    DateTime?
  publishedAt     DateTime?

  // Statistics
  viewCount    Int @default(0)
  likeCount    Int @default(0)
  shareCount   Int @default(0)
  commentCount Int @default(0)

  // Relations
  likes    ArticleLike[]
  views    ArticleView[]
  comments ArticleComment[]
  shares   ArticleShare[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([slug])
  @@index([published])
  @@index([createdAt])
  @@map("article")
}

model ArticleLike {
  id        String   @id @default(cuid())
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([articleId, userId])
  @@index([articleId])
  @@index([userId])
  @@map("article_like")
}

model ArticleView {
  id        String   @id @default(cuid())
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  userId    String?
  ipAddress String?
  userAgent String?
  viewedAt  DateTime @default(now())

  @@index([articleId])
  @@index([userId])
  @@index([viewedAt])
  @@map("article_view")
}

model ArticleComment {
  id        String                @id @default(cuid())
  articleId String
  article   Article               @relation(fields: [articleId], references: [id], onDelete: Cascade)
  userId    String
  user      User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String                @db.Text
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  replies   ArticleCommentReply[]

  @@index([articleId])
  @@index([userId])
  @@index([createdAt])
  @@map("article_comment")
}

model ArticleCommentReply {
  id        String         @id @default(cuid())
  commentId String
  comment   ArticleComment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  userId    String
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String         @db.Text
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@index([commentId])
  @@index([userId])
  @@index([createdAt])
  @@map("article_comment_reply")
}

model ArticleShare {
  id        String   @id @default(cuid())
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  userId    String?
  platform  String? // "twitter", "facebook", "linkedin", "copy", etc.
  sharedAt  DateTime @default(now())

  @@index([articleId])
  @@index([userId])
  @@index([sharedAt])
  @@map("article_share")
}

model Poll {
  id             String   @id @default(cuid())
  question       String
  isActive       Boolean  @default(true)
  allowsMultiple Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  userID  String
  user    User         @relation(fields: [userID], references: [id], onDelete: Cascade)
  options PollOption[]
  votes   PollVote[]

  @@index([userID])
  @@index([isActive])
  @@index([createdAt])
}

model PollOption {
  id        String @id @default(cuid())
  text      String
  order     Int
  voteCount Int    @default(0)

  pollId String
  poll   Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade)
  votes  PollVote[]

  @@unique([pollId, order])
  @@index([pollId])
  @@map("poll_option")
}

model PollVote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  pollId String
  poll   Poll   @relation(fields: [pollId], references: [id], onDelete: Cascade)

  optionId String
  option   PollOption @relation(fields: [optionId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([pollId, userId, optionId])
  @@index([pollId])
  @@index([userId])
  @@index([createdAt])
  @@map("poll_vote")
}
