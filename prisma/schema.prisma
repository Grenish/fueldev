model CreatorsStore {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  storeName   String  @unique
  storeLogo   String?
  description String? @db.Text

  ownerId   String
  owner     User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerName String // snapshot of user's name at creation

  products    StoreProduct[]
  categories  ProductCategory[]
  storePolicy StorePolicy?

  @@map("creators_store")
}

model StoreProduct {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  storeId String
  store   CreatorsStore @relation(fields: [storeId], references: [id], onDelete: Cascade)

  name        String
  coverArt    String?
  description String  @db.Text
  price       Int

  categoryId String
  category   ProductCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  item String

  quantity      Int     @default(0)
  question      String?
  discount      Int     @default(0)
  customMessage String?

  published Boolean @default(false)

  @@index([storeId])
  @@index([categoryId])
  @@index([published])
  @@map("store_product")
}

model ProductCategory {
  id      String        @id @default(cuid())
  storeId String
  store   CreatorsStore @relation(fields: [storeId], references: [id], onDelete: Cascade)

  name String
  slug String? @unique

  products StoreProduct[]

  @@unique([storeId, name])
  @@index([storeId])
  @@map("product_category")
}

model StorePolicy {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  refundPolicyChoice        String
  deliveryMethodChoice      String
  supportAvailabilityChoice String
  paymentFinalityChoice     String
  buyerInfoRequiredChoice   String

  finalPolicyText String @db.Text

  agreed   Boolean   @default(false)
  agreedAt DateTime?

  storeId String        @unique
  store   CreatorsStore @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@map("store_policy")
}
